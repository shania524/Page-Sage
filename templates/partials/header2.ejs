<header class="
<%= currentPage === 'page1' ? 'header-page1' : 'header-page2' %>
<%= currentPage === 'page2' ? 'small-header' : '' %>">

    <div class="header-content">

    <a class="logo"><img src="../logo-removebg-preview.png" alt="Logo" class="logo"></img> <h1>   PAGESAGE</h1></a>  
    </div>
    <div class="dropdown-container">
      <i class="fas fa-solid fa-user expand-icon"></i>
      <div class="dropdown-menu" id="dropdownMenu">
        <ul>
          <li><a href="/logout">Log out</a></li>
          <li><a href="/cart">Cart</a></li>
          
        </ul>
      </div>
    </div>
  </header>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      var expandIcon = document.querySelector('.expand-icon');
      var dropdownMenu = document.querySelector('.dropdown-menu');
  
      expandIcon.addEventListener('click', function() {
        dropdownMenu.classList.toggle('show');
      });
  
      document.addEventListener('click', function(event) {
        if (!event.target.closest('.dropdown-container')) {
          dropdownMenu.classList.remove('show');
        }
      });
    });
  </script>